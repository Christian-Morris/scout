<div class="container" data-controller="home" data-action= "wheel->home#cancelScroll">
  <div id="home">
    <div class="d-flex">
      <img src="assets/scout.png" alt="background circus tent image">
    </div>
    <div id="remaining">
      <div class="btn d-flex mt-2" data-action="click->home#scroll">
        NEW GAME
      </div>
    </div>
  </div>

  <div id="options">
      <div class="btn mt-2" data-bs-toggle="modal" data-bs-target="#exampleModal">2 PLAYERS</div>
      <div class="btn mt-2" data-bs-toggle="modal" data-bs-target="#exampleModal"">3 PLAYERS</div>
      <div class="btn mt-2" data-bs-toggle="modal" data-bs-target="#exampleModal"">4 PLAYERS</div>
      <div class="btn mt-2" data-bs-toggle="modal" data-bs-target="#exampleModal"">5 PLAYERS</div>
  </div>
  <!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">DIFFICULTY</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= link_to "EASY", game_path, class: "btn my-3" %>
        <%= link_to "MEDIUM", game_path, class: "btn my-3" %>
        <%= link_to "DIFFICULT", game_path, class: "btn my-3" %>
      </div>
    </div>
  </div>
</div>
</div>
